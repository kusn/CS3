<UserControl x:Class="OurWpfControlsLibrary.TabSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OurWpfControlsLibrary"
             x:Name="root"
>
    <DockPanel>
        <Button x:Name="btnPrevious" MinWidth="114" MaxWidth="150" Click="btnPrevious_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/Move Previous (Arrow) Green64.png" Width="30"/>
                    <TextBlock x:Name="tbPrev" Margin="5,0,0,0" VerticalAlignment="Center" Text="{Binding PrevText,ElementName=root}"></TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
        <Button x:Name="btnNext" MinWidth="114" MaxWidth="150" Click="btnNext_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/Move Next (Arrow) Green64.png" Width="30"/>
                    <TextBlock x:Name="tbNext" Margin="5,0,0,0" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </DockPanel>
</UserControl>
