<Window x:Class="MovieTicketSalesEF.WndAddSeance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieTicketSalesEF"
        mc:Ignorable="d"
        Title="WndAddSeance" Height="450" Width="450" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Название фильма" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <TextBox x:Name="tbName" Grid.Row="1" Margin="10,10,10,10" FontSize="16"/>
        <Label Content="Время сеанса" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <DatePicker x:Name="dpTime" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="3" VerticalAlignment="Top" Height="64" Width="422"/>
        <Button x:Name="btnAdd" Grid.Row="4" Content="Добавить" FontSize="24" Click="btnAdd_Click"/>
    </Grid>
</Window>
